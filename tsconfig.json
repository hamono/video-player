{
  "compilerOptions": {
    "module": "esnext",
    "target": "ES2019",
    "allowJs": false,
    "jsx": "react",
    "moduleResolution": "node",
    "noImplicitReturns": true,
    "noImplicitThis": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noFallthroughCasesInSwitch": true,
    "strict": true,
    "removeComments": true,
    "alwaysStrict": true,
    "esModuleInterop": true 
  }
}